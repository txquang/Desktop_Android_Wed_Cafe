<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="7dp"
    android:layout_marginRight="4dp"
    android:id="@+id/IT_LN_HoaDon">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:background="#8CFFFFFF">

        <ImageView
            android:id="@+id/IT_HD_Anh"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_coffee"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/IT_HD_TV_Ten"
            android:layout_width="271dp"
            android:layout_height="26dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="44dp"
            android:layout_marginBottom="18dp"
            android:text="Ten sach 123585454"
            android:textColor="#0E0E0E"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.833" />

        <TextView
            android:id="@+id/IT_HD_TV_Gia"
            android:layout_width="87dp"
            android:layout_height="22dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="21dp"
            android:gravity="center|left"
            android:text="150.000Ä‘"
            android:textColor="#0B0B0B"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.29"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/IT_HD_TV_Ten"
            app:layout_constraintVertical_bias="0.2" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="213dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="4dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.95"
            tools:ignore="MissingConstraints">

            <ImageButton
                android:id="@+id/imageminus"
                android:layout_width="15dp"
                android:layout_height="15dp"
              />
<!--                android:onClick="countIN" />-->

            <TextView
                android:id="@+id/IT_HD_TV_SoLuong"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:gravity="center"
                android:text="10"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="18dp" />

            <ImageButton
                android:id="@+id/imagephus"
                android:layout_width="15dp"
                android:layout_height="15dp"

                />
<!--                android:onClick="countDE" />-->

            <TextView
                android:id="@+id/IT_HD_TV_ThanhTien"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:textColor="#FF5252"
                android:gravity="center"
                android:textStyle="bold"
                android:text="1000000"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="18dp" />

            <ImageButton
                android:id="@+id/imagecancel"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/ic_delete" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
